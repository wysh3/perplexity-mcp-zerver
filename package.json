{
  "name": "perplexity-mcp-zerver",
  "version": "0.3.1",
  "description": "MCP server using Puppeteer to interact with Perplexity.ai without an API key.",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "start": "bun build/main.js",
    "login": "bun build/login.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "biome lint . --write",
    "format": "biome format . --write",
    "dev": "bun run build && bun run start"
  },
  "keywords": [
    "mcp",
    "perplexity",
    "puppeteer",
    "ai",
    "research"
  ],
  "author": "sm-moshi",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@mozilla/readability": "0.6.0",
    "@types/axios": "0.9.36",
    "@types/jsdom": "27.0.0",
    "@types/mozilla__readability": "0.4.2",
    "axios": "^1.13.4",
    "jsdom": "27.4.0",
    "minimist": "1.2.8",
    "puppeteer": "24.10.1",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/minimist": "1.2.5",
    "@types/node": "22.15.30",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "bun-types": "latest",
    "typescript": "5.8.3",
    "vitest": "^4.0.18"
  }
}